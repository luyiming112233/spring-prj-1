<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.zjut.dao.StudentMapper">
    <!--
    <resultMap id="studentMap" type="cn.edu.zjut.po.Student">
        <id property="stuID" column="stuid" javaType="java.lang.Integer"></id>
        <result property="name" column="name" javaType="java.lang.String"></result>
        <result property="classname" column="classname" javaType="java.lang.String"></result>
