    <insert id="insertStudent" parameterType="cn.edu.zjut.po.Student" useGeneratedKeys="true"
            keyProperty="stuID">
        INSERT INTO
        student (stuid,name,password,classname,departname,email,img)
        VALUES (#{stuID},#{name},#{password},#{classname},#{departname},#{email},#{img})
    </insert>
    
    <update id="updateStudent" parameterType="cn.edu.zjut.po.Student">
        UPDATE student set
        name=#{name},password=#{password},classname=#{classname},departname=#{departname},email=#{email},img=#{img}
        where stuid=#{stuID}
    </update>

    <delete id="deleteStudent" parameterType="int">
        DELETE FROM student
        WHERE stuid=#{id}
    </delete>
    
    <select id="selectStudentById" parameterType="int" resultType="cn.edu.zjut.po.Student">
        SELECT * FROM student
        WHERE stuid=#{id}
    </select>

    <select id="selectAllStudent" resultType="cn.edu.zjut.po.Student">
        SELECT * FROM student
    </select>

    <select id="selectStudentByClass" parameterType="String" resultType="cn.edu.zjut.po.Student">
        SELECT * FROM student WHERE classname = #{className}
    </select>

    <select id="selectStudentByDepart" resultType="cn.edu.zjut.po.Student">
        SELECT * FROM student WHERE departname = #{departName}
    </select>

</mapper>